{
  "openapi": "3.0.1",
  "info": {
    "title": "FacturaYa API",
    "description": "API para la integración con el sistema de facturación electrónica FacturaYa",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "{endpoint}",
      "variables": {
        "endpoint": {
          "default": "https://api.facturaya.app"
        }
      }
    }
  ],
  "paths": {
    "/v1/auth/token": {
      "post": {
        "summary": "Obtener Token",
        "description": "Obtiene un token de autenticación para realizar peticiones a la API",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "client_id": {
                    "type": "integer",
                    "description": "Código proporcionado por FacturaYa"
                  },
                  "client_secret": {
                    "type": "string",
                    "description": "Clave proporcionada por FacturaYa"
                  }
                },
                "required": ["client_id", "client_secret"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token generado exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "estado": {
                      "type": "integer"
                    },
                    "noticias": {
                      "type": "object"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "token_type": {
                          "type": "string"
                        },
                        "expires_in": {
                          "type": "integer"
                        },
                        "access_token": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/m2m/documents/invoice": {
      "post": {
        "summary": "Crear Factura",
        "description": "Crea una nueva factura electrónica",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "invoice": {
                    "type": "object"
                  },
                  "unique_id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Factura creada exitosamente"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
